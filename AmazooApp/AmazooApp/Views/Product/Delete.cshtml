@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model AmazooApp.Models.Product

<form method="post" asp-action="DeletePost">
    <input asp-for="Id" hidden /> 
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Delete Product</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-2">
                        <label asp-for="ProductName"></label>
                    </div>
                    <div class="col-2">
                        <label asp-for="Description"></label>
                    </div>
                    <div class="col-1">
                        <label asp-for="QuantityInStock"></label>
                    </div>
                    <div class="col-1">
                        <label asp-for="Price"></label>
                    </div>
                    <div class="col-2">
                        <label asp-for="Category"></label>
                    </div>
                    <div class="col-2">
                        <label asp-for="Image"></label>
                    </div>
                    <div class="col-2">
                        <label asp-for="Brand"></label>
                    </div>
                </div>             
                 <div class="form-group row">
                 <div class="col-2">
                 <input asp-for="ProductName" disabled class="form-control" />
                  </div>
                   <div class="col-2">
                    <input asp-for="Description" disabled class="form-control" />
                 </div>
                   <div class="col-1">
                    <input asp-for="QuantityInStock" disabled class="form-control" />
                    </div>
                     <div class="col-1">
                     <input asp-for="Price" disabled class="form-control" />
                    </div>
                  <div class="col-2">
                    <input asp-for="Category"  disabled class="form-control" />
                   </div>
                  <div class="col-2">
                   <input asp-for="Image" disabled class="form-control" />
                  </div>
                  <div class="col-2">
                  <input asp-for="Brand" disabled class="form-control" />
                  </div>
                 </div>
                <div class="form-group row">
                    <div class="col-8 offset-2 row">
                        <div class="col">
                            <input type="submit" class="btn btn-danger w-75" value="Delete" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-75">Back</a>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</form>