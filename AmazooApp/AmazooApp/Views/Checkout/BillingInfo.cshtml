@model AmazooApp.Models.Checkout.CheckoutViewModel


<form class="form container" method="post" asp-action="BillingInfo" asp-controller="Checkout">

    <h3 class="mb-5 text-center">Billing information</h3>

    <div asp-validation-summary="All" class="row text-danger"></div>



    <div class="form-group">
        <label class="form-label"> name</label>
        <input type="text" class="form-control form-control-lg" placeholder="John Smith" />
        <span asp-validation-for=name class="text-danger"></span>
    </div>

    <div class="form-group">
        <label class="form-label"> cardNumber</label>
        <input type="text" class="form-control form-control-lg" placeholder="1234 5678 9101" />
        <span asp-validation-for=cardNumber class="text-danger"></span>
    </div>

    <div class="form-row">

        <div class="form-group col-md-4">
            <label class="form-label" asp-for="expMonth"> </label>
            <select class="form-control" asp-items="@AmazooApp.Utility.MonthHelper.GetMonthsForDropDown()" asp-for="expMonth"></select>
            <span asp-validation-for="expMonth" class="text-danger"></span>
        </div>

        <div class="form-group col-md-2">
            <label class="form-label" asp-for="expYear"> </label>
            <select class="form-control" asp-items="@AmazooApp.Utility.YearHelper.GetYearsForDropDown()" asp-for="expYear"></select>
            <span asp-validation-for="expYear" class="text-danger"></span>
        </div>
    </div>

        <div class="form-group">
            <label class="form-label"> CCV</label>
            <input type="text" class="form-control form-control-lg" placeholder="123" />
            <span asp-validation-for=ccv class="text-danger"></span>
        </div>
        <button class="btn btn-primary btn-lg btn-block" type="submit">Confirm payment and order</button>
</form>