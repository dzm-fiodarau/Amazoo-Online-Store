@{
    ViewData["Title"] = "Add Product";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model AmazooApp.Models.Product

<form method="post" asp-action="AddProduct" enctype="multipart/form-data">
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Add Product</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-2">
                        <label asp-for="ProductName"></label>
                    </div>
                    <div class="col-2">
                        <label asp-for="Description"></label>
                    </div>
                    <div class="col-1">
                        <label asp-for="QuantityInStock"></label>
                    </div>
                    <div class="col-1">
                        <label asp-for="Price"></label>
                    </div>
                    <div class="col-2">
                        <label asp-for="Category"></label>
                    </div>
                    <div class="col-2">
                        <label asp-for="Brand"></label>
                    </div>
                    <div class="col-2">
                        <label>Image</label>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-2">
                        <input asp-for="ProductName" class="form-control" />
                    </div>
                    <div class="col-2">
                        <input asp-for="Description" class="form-control" />
                    </div>
                    <div class="col-1">
                        <input asp-for="QuantityInStock" class="form-control" />
                    </div>
                    <div class="col-1">
                        <input asp-for="Price" class="form-control" />
                    </div>
                    <div class="col-2">
                        <input asp-for="Category" class="form-control" />
                    </div>
                    <div class="col-2">
                        <input asp-for="Brand" class="form-control" />
                    </div>
                    <div class="col-2">
                        <input type="file" name="postedFile"/>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-2 row">
                        <div class="col">
                            <input type="submit" class="btn btn-info w-75" value="AddProduct" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-danger w-75">Back</a>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</form>