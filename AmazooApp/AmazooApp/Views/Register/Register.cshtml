@model AmazooApp.Models.ViewModels.RegisterViewModel


<form class="form container" method="post" asp-action="Register" asp-controller="Register">
    <h3 class="mb-5 text-center">Sign Up</h3>
    <div asp-validation-summary="All" class="row text-danger"></div>

    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for=FirstName></label>
            <input type="text" class="form-control" asp-for="FirstName" placeholder="Jane" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>

        <div class="form-group col-md-6">
            <label class="form-label" for="typeEmailX-2" asp-for="LastName"></label>
            <input type="text" id="typeEmailX-2" class="form-control" asp-for="LastName" placeholder="Doe"/>
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label class="form-label" asp-for="Email"></label>
        <input type="email" class="form-control form-control-lg" asp-for="Email" placeholder="Email@email.ca" />
        <span asp-validation-for=Email class="text-danger"></span>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label class="form-label" for="typePasswordX-2" asp-for=Password></label>
            <input type="password" id="typePasswordX-2" class="form-control form-control-lg" asp-for="Password" placeholder="password"/>

            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6">
            <label class="form-label" for="typeEmailX-2" asp-for="ConfirmPassword"></label>
            <input type="password" id="typeEmailX-2" class="form-control form-control-lg" asp-for="ConfirmPassword" />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>
    </div>
        <div class="form-group">
            <label class="form-label" asp-for="Address"></label>
            <input type="text" class="form-control" asp-for="Address" placeholder="123 Guy" />
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label class="form-label" asp-for="City"></label>
            <input type="text" class="form-control" asp-for="City"/>

            <span asp-validation-for="City" class="text-danger"></span>
        </div>
        <div class="form-group col-md-4">
            <label class="form-label" asp-for="Province"> </label>
             <select class="form-control" asp-items="@AmazooApp.Utility.ProvinceHelper.GetProvincesForDropDown()" asp-for="Province"></select>
            <span asp-validation-for="Province" class="text-danger"></span>
        </div>
        <div class="form-group col-md-2">
            <label class="form-label">Zip</label>
            <input type="text" class="form-control" asp-for="Zipcode"/>
            <span asp-validation-for="Zipcode" class="text-danger"></span>
        </div>
    </div>

      <div class="form-row">
    <div class="form-group col-md-6">
         <label class="form-label" asp-for=Role> </label>
        <select class="form-control" asp-items="@AmazooApp.Utility.RoleHelper.GetRolesForDropDown()" asp-for="Role"></select>
    </div>
    </div>
       <div>
        <p class="form-group col-md-6">Already have an account? <a href="~/Login/Login" class="fw-bold">Log In </a></p>
    </div>
    <button class="btn btn-primary btn-lg btn-block" type="submit">Register</button>
</form>

@section scripts{
<partial name="_ValidationScriptsPartial" />
}