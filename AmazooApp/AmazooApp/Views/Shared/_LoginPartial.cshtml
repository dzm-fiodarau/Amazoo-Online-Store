@inject Microsoft.AspNetCore.Identity.SignInManager<AmazooApp.Models.ApplicationUser> signInManager

    @if(signInManager.IsSignedIn(User)){
        <form id="logoutForm" asp-action"logoff" asp-controller="Login">
            <ul class="nav navbar-nav">
                <li> Hello, @User.Identity.Name!</li>
                <li><a href="javascript:document.getElementById('logoutForm').submit()"> Log OFF</a></li>

            </ul>
        </form>
    }else{
        <ul class="nav navbar-nav">
            <li class="nav-item"><a class="nav-link text-red" id="registerLink" asp-controller="Register" asp-action="Register">Register</a></li>
             <li>
                <a class="nav-link text-red" id="loginLink" asp-controller="Login" asp-action="Login">
                    Login
                </a>
             </li>
        </ul>
    }