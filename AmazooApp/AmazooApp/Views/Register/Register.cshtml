@model AmazooApp.Models.ViewModels.RegisterViewModel


<form method="post" asp-action="Register" asp-controller="Register">
     <section class="vh-100">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                    <div class="card shadow-2-strong" style="border-radius: 1rem;">
                        <div class="card-body p-5 text-center">

                            <h3 class="mb-5">Sign UP</h3>
                                       <div class="form-outline mb-4 row">
                                <input type="text" id="typeEmailX-2" class="form-control form-control-lg" asp-for="FirstName" />
                                <label class="form-label"  asp-for=FirstName></label>
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>
                                       <div class="form-outline mb-4 row">
                                <input type="text" id="typeEmailX-2" class="form-control form-control-lg" asp-for="LastName" />
                                <label class="form-label"  for="typeEmailX-2" asp-for = "LastName"></label>
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>

                            <div class="form-outline mb-4 row">
                                <input type="email" id="typeEmailX-2" class="form-control form-control-lg" asp-for="Email" />
                                <label class="form-label"  for="typeEmailX-2" asp-for="Email"></label>
                                <span asp-validation-for=Email class="text-danger"></span>
                            </div>

                            <div class="form-outline mb-4">
                                <input type="password"  id="typePasswordX-2" class="form-control form-control-lg" asp-for="Password" />
                                <label class="form-label" for="typePasswordX-2" asp-for=Password></label>
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                                       <div class="form-outline mb-4 row">
                                <input type="password" id="typeEmailX-2" class="form-control form-control-lg" asp-for="ConfirmPassword" />
                                <label class="form-label"  for="typeEmailX-2" asp-for="ConfirmPassword"></label>
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>
                            <div class="form-outline mb-4 row">
                                <select class="form-control form-control-lg" asp-items="@AmazooApp.Utility.RoleHelper.GetRolesForDropDown()" asp-for="Role" ></select>

                            </div>
                            <button class="btn btn-primary btn-lg btn-block" type="submit">Register</button>

                        </div>
                    </div>

                </div>

            </div>

        </div>


    </section>
</form>
