@{
    ViewBag.Title = "Log in";
}

@model AmazooApp.Models.ViewModels.LoginViewModel

<form method="post" asp-action="Check" asp-controller="Login">

    <section class="vh-100">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                    <div class="card shadow-2-strong" style="border-radius: 1rem;">
                        <div class="card-body p-5 text-center">
                            <h3>Login</h3>

                            <div asp-validation-summary="All" class="row text-danger"></div>
                            <div class="form-outline mb-4 row">

                                <label class="form-label" for="typeEmailX-2">Email</label>
                                <input type="email" id="typeEmailX-2" class="form-control form-control-lg" asp-for="Email" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>

                            <div class="form-outline mb-4 row">
                                <label class="form-label" for="typePasswordX-2">Password</label>
                                <input type="password" id="typePasswordX-2" class="form-control form-control-lg" asp-for="Password" />
                                <span asp-validation-for="Password" class="form-row text-danger"></span>
                            </div>

                            <div class="col-12 mb-4">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="rememberMe" asp-for="RememberMe">
                                    <label class="form-check-label" asp-for="RememberMe"></label>
                                </div>
                            </div>

                            <button id="loginBtn_Id" class="btn btn-primary btn-lg btn-block" type="submit">Login</button>

                        </div>
                        <div>
                            <p class="mb-0">Don't have an account? <a href="~/Register/Register" class="fw-bold">Sign Up</a></p>
                        </div>
                    </div>

                </div>

            </div>

        </div>


    </section>

</form>
@section scripts{
<partial name="_ValidationScriptsPartial" />
}