@inject Microsoft.AspNetCore.Identity.SignInManager<AmazooApp.Models.ApplicationUser> signInManager
@model IEnumerable<AmazooApp.Models.ApplicationUser>;

@{
    ViewData["Title"] = "User List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    if (signInManager.IsSignedIn(User))
    {
        if (User.IsInRole("Admin"))
        {
            <div style="text-align: center; margin: 30px 0 30px 0;">

                <h1>Users</h1>
                <br />
            </div>

            @if (Model.Count() >= 0)
            {
                <table class="table table-bordered" style="margin-top: 20px">
                    <thead>
                        <tr>
                            <th>User ID</th>
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>Email</th>
                            <th>Address</th>
                            <th>City</th>
                            <th>Province</th>
                            <th>Zip Code</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var userAccount in Model)
                        {
                        <tr>
                            <td style="width: 12.5%;">@userAccount.Id</td>
                            <td style="width: 12.5%;">@userAccount.FirstName</td>
                            <td style="width: 12.5%;">@userAccount.LastName</td>
                            <td style="width: 12.5%;">@userAccount.Email</td>
                            <td style="width: 12.5%;">@userAccount.Address</td>
                            <td style="width: 12.5%;">@userAccount.City</td>
                            <td style="width: 12.5%;">@userAccount.Province</td>
                            <td style="width: 12.5%;">@userAccount.Zipcode</td>
                        </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div style="text-align: center; margin-top: 30px;">
                    <h1>No user accounts stored in the system.</h1>
                </div>
            }
        }
        else
        {
            <div style="text-align: center; margin-top: 30px;">
                <h1>You do not seem to have the authorization to access this page.</h1>
            </div>
        }
    }
    else
    {
        <div style="text-align: center; margin-top: 30px;">

            <h1>Please log in before accessing this page.</h1>

        </div>
    }
}

