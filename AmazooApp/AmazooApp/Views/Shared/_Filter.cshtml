@model IEnumerable<AmazooApp.Models.Product>

<div class="col-md-2 text-md-start">
  <form asp-action="Filter" asp-controller="Home">
    <div class="border-bottom pb-2 ml-2">
        <h4>Filters</h4>
    </div>
    <button type="submit" onclick="Save()"> Apply Filters</button>
    <div class="py-2 border-bottom ml-3">
        <h6 class="font-weight-bold">Type</h6>
