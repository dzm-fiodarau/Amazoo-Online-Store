@model IEnumerable<AmazooApp.Models.Product>

@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
    <meta charset="utf-8" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.1.1/css/all.css" integrity="sha384-O8whS3fhG2OnA5Kas0Y9l3cfpmYjapjI0E4theH4iuMD+pLhbf6JI0jIMfYcK3yZ" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.bundle.min.js" integrity="sha384-b5kHyXgcpbZJO/tY9Ul7kGkf1S0CWuKcCD38l8YkeH8z8QjE0GmW1gYU5S9FOnJ0" crossorigin="anonymous"></script>
</head>
<div style="text-align: center;">
    <div style=" margin:30px 0 30px 0">
        <form asp-action="Index" asp-controller="Home">
            <input type="search" name="searchEntry" id="search_bar" placeholder="Enter what you are looking for..." />
            <button type="submit" style="height:40px;">Search</button>
        </form>
    </div>
    <div id="products_container">
        @{
            if (Model.Count() > 0)
            {
                foreach (var product in Model)
                {
                    <div class="product_elem">
                        <button class="but">
                            <img src="@product.Image" alt="@product.ProductName" />
                        </button>
                        <h2 style="font-size: calc(12px + 0.6vw);">@product.ProductName</h2>
                        <span style="float:left; margin-left: 0.2vw">@product.Price $</span>
                        <span style="float:right; margin-right:0.2vw"><strong>Brand:</strong> @product.Brand</span>
                        <br />
                        @if (product.QuantityInStock > 0)
                        {
                            <pre style="background-color:darkgreen; color:white; font-size:calc(6px + 0.4vw)">In Stock</pre>
                            <button class="add-cart" type="button" data-target="@product.ProductName" style="display: inline; font-size:calc(8px + 0.7vw)">Add to Cart</button>
                        }
                        else
                        {
                            <pre style="background-color:darkred; color:white; font-size:calc(6px + 0.4vw)">Out of Stock</pre>
                            <button style="display: inline; font-size:calc(8px + 0.7vw); text-decoration: line-through">Add to Cart</button>
                        }
                    </div>
                }
            }
            else
            {
                <h1 style="margin-top:30px;">There is no available products at the moment.</h1>
            }
        }

    </div>



    <!--SHOPPING CART NAV-BAR-->
    <div class="relative">
        <div class="absolute">
            <button style="font-size:30px;cursor:pointer" onclick="openNav()" class="shoppingCart" href="" style="color:black;"><i class="fas fa-shopping-cart"></i> <span> 0 </span> </button>
        </div>
    </div>
    <div id="mySidenav" class="sidenav">
        <div class="topNav">
            <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
        </div>
        <div class="table-responsive-sm">
            <div class="content">
                <table class="table table-striped" id="dropDownCart">
                    <!--Table Insert From JS-->
                </table>
            </div>
        </div>
    </div>
    <script src="~/js/ShoppingCart.js" type="text/javascript"></script>

</div>